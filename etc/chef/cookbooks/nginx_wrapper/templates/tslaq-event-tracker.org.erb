server {
    listen 80 default_server;

    server_name _;

    return 301 https://$host$request_uri;
}

server {
    listen 443;

    server_name tslaq-event-tracker.org;
    return 301 https://www.tslaq-event-tracker.org$request_uri;
}

server {
    listen 443;

    server_name www.tslaq-event-tracker.org;

    map $time_iso8601 $year {
      default '0000';
      "~^(\d{4})-(\d{2})-(\d{2})" $1;
    }
    map $time_iso8601 $month {
        default '00';
        "~^(\d{4})-(\d{2})-(\d{2})" $2;
    }
    map $time_iso8601 $day {
        default '00';
        "~^(\d{4})-(\d{2})-(\d{2})" $3;
    }
    access_log  /var/local/tslaq-event-tracker/logs/access-$year-$month-$day.log main;
    error_log /var/local/tslaq-event-tracker/logs/error-$year-$month-$day.log;

    location / {
      root <%= @server_root =%>;
      try_files $uri /index.html;
    }

    upstream api {
      server <%= @backend_api_url =%>;
    }

    location /api {
      proxy_pass http://api/;
    }
}
