upstream api {
    server <%= @backend_api_url =%>;
}

server {
    listen 80 default_server;
    listen [::]:80 default_server;

    server_name tslaq-event-tracker.org;

    location /.well-known/ {
        root <%= @server_root =%>;
    }

    location / {
        return 301 https://$host$request_uri;
    }
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;

    add_header Strict-Transport-Security "max-age=31536000; includeSubdomains; preload";

    add_header Content-Security-Policy "default-src 'self' https://prices.tslaq-event-tracker.org; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://ssl.google-analytics.com; img-src 'self' data: https://ssl.google-analytics.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self'; frame-src 'none'; object-src 'none'";

    server_name tslaq-event-tracker.org;

    return 301 https://www.tslaq-event-tracker.org$request_uri;
}

server {
    listen 443 ssl http2 default_server;
    listen [::]:443 ssl http2 default_server;

    add_header Strict-Transport-Security "max-age=31536000; includeSubdomains; preload";

    add_header Content-Security-Policy "default-src 'self' https://prices.tslaq-event-tracker.org; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://ssl.google-analytics.com; img-src 'self' data: https://ssl.google-analytics.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self'; frame-src 'none'; object-src 'none'";

    satisfy all;
    allow 76.91.154.9;
    allow 127.0.0.1;
    deny all;
    auth_basic "Development";
    auth_basic_user_file /var/local/tslaq-event-tracker/etc/passwords/basic_auth;

    server_name www.tslaq-event-tracker.org;

    access_log  /var/local/tslaq-event-tracker/logs/access.log main;
    error_log /var/local/tslaq-event-tracker/logs/error.log;

    location / {
      root <%= @server_root =%>;
      try_files $uri /index.html;
    }

    location /api/ {
      default_type application/json;
      rewrite ^/api/(.*)$ /$1 break;
      proxy_pass http://api/;
    }
}
